    <!-- Segment Header -->
    
    <Style Selector="StackPanel#ExplorerSegmentHeaderContainer">
        <Setter Property="Height" Value="18" />
        <Setter Property="Margin" Value="0,16,0,0" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>
    
    <Style Selector="TextBlock#ExplorerSegmentHeaderText">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Foreground" Value="#dddddd" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,0,4,0" />
    </Style>
    
    <Style Selector="StackPanel#ExplorerSegmentHeaderContainer:pointerover TextBlock#ExplorerSegmentHeaderText">
        <Setter Property="Foreground" Value="#ffffff" />
    </Style>
    
    <Style Selector="Image#ExplorerSegmentHeaderImage">
        <Setter Property="Opacity" Value="0.8" />
        <Setter Property="Width" Value="12"/>
        <Setter Property="Height" Value="12"/>
    </Style>
    
    <Style Selector="StackPanel#ExplorerSegmentHeaderContainer:pointerover Image#ExplorerSegmentHeaderImage">
        <Setter Property="Opacity" Value="1" />
    </Style>
    
