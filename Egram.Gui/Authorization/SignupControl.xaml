<UserControl
    xmlns="https://github.com/avaloniaui">
    
    <Grid
        RowDefinitions="auto,auto,auto,auto,*"
        ColumnDefinitions="auto,*"
        Classes="SignupForm"
        >
    
        <Ellipse
            Grid.Row="0"
            Grid.Column="0"
            Fill="#363d49"
            />
    
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Watermark="Phone number"
            Text="{Binding PhoneNumber, Mode=TwoWay}"
            />
    
        <Ellipse
            Grid.Row="1"
            Grid.Column="0"
            Fill="#363d49"
            />
    
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Watermark="First name"
            Text="{Binding FirstName, Mode=TwoWay}"
            />
    
        <Ellipse
            Grid.Row="2"
            Grid.Column="0"
            Fill="#363d49"
            />
    
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Watermark="Last name"
            Text="{Binding LastName, Mode=TwoWay}"
            />
    
        <Panel
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            >
        
            <Button
                Command="{Binding SignupCommand}"
                >
                <TextBlock Text="Login" />
            </Button>
        
        </Panel>
    
    </Grid>
    
</UserControl>