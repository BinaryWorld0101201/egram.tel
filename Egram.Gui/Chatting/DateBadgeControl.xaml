<UserControl
    xmlns="https://github.com/avaloniaui">
    
    <Grid
        Name="BadgeMessage"
        RowDefinitions="auto"
        ColumnDefinitions="*,auto,*"
        >
        
        <Border
            Name="BadgeMessageContainer"
            Grid.Column="1">
            
            <TextBlock
                Name="BadgeMessageText"
                Text="{Binding Text}" />
            
        </Border>
        
    </Grid>
    
</UserControl>