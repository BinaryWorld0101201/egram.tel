<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:gui="clr-namespace:Tel.Egram.Gui"
    Width="800"
    Height="600"
    MinWidth="800"
    MinHeight="600"
    MaxWidth="800"
    MaxHeight="600"
    Title="{Binding WindowTitle}"
    Background="#ffffff"
    >
    
    <Panel>
    
        <Carousel
            SelectedIndex="{Binding PageIndex}">
        
            <gui:LoadingPage
                DataContext="{Binding LoadingContext}" />
        
            <gui:AuthenticationPage
                DataContext="{Binding AuthenticationContext}" />
        
            <gui:WorkspacePage
                DataContext="{Binding WorkspaceContext}" />
        
        </Carousel>
        
        <gui:PopupControl
            IsVisible="{Binding IsPopupVisible}"
            DataContext="{Binding PopupContext}" />
        
    </Panel>
    
</Window>