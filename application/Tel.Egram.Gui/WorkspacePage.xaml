<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:gui="clr-namespace:Tel.Egram.Gui">
    
    <Grid
        ColumnDefinitions="64,200,*"
        RowDefinitions="*"
        >
    
        <gui:NavigationControl
            DataContext="{Binding NavigationContext}"
            Grid.Column="0"
            />
        
        <gui:ExplorerControl
            DataContext="{Binding ExplorerContext}"
            Grid.Column="1"
            />
    
        <gui:ContentHostControl
            DataContext="{Binding ContentContext}"
            Grid.Column="2"
            />
        
    </Grid>
    
</UserControl>