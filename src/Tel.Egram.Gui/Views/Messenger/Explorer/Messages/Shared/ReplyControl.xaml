<ContentControl
    xmlns="https://github.com/avaloniaui"
    xmlns:shared="clr-namespace:Tel.Egram.Gui.Views.Messenger.Explorer.Messages.Shared">
    
    <Border
        DataContext="{Binding Reply}"
        BorderThickness="2,0,0,0"
        BorderBrush="#17a1e6"
        Margin="0,4,0,0">
        
        <Grid
            RowDefinitions="auto,auto"
            ColumnDefinitions="*">

            <Border
                Grid.Row="0"
                Grid.Column="1"
                Height="24"
                Margin="8,0,0,0"
                VerticalAlignment="Center">

                <TextBlock
                    Text="{Binding AuthorName}"
                    FontWeight="Medium"
                    TextWrapping="Wrap"
                    VerticalAlignment="Center" />

            </Border>
        
            <Border
                Grid.Row="2"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Margin="8,0,0,6">
    
                <TextBlock
                    Text="{Binding Text}"
                    Foreground="#666666"
                    Margin="0,0,0,0"
                    TextWrapping="NoWrap"
                    VerticalAlignment="Center" />
    
            </Border>

        </Grid>
        
    </Border>
    
</ContentControl>